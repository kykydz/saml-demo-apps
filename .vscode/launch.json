  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Apps",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}/server.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "envFile": "${workspaceFolder}/local.env"
    }
  ]
}
